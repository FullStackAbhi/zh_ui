.swiper1 {
    position: absolute;
    width: 100%;
    min-height: 460px;
    height: 100vh;
    max-height: 800px;
    z-index: 100;
    /* clip-path: polygon(0% 0%, 0% 100%, 100% 80%, 100% 0%); */
}
.swiper1:after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.5);
    z-index: 250;
}
.hero-content {
    position: relative;
    padding: 160px 0 0 0;
    min-height: 460px;
    height: 100vh !important;
    max-height: 800px;
    z-index: 500;
}
.tagline {
    text-transform: uppercase;
    letter-spacing: 1.3px;
    margin: 0 0 24px 0;
    font-weight: 300;
    font-size: 36px;
    text-shadow: 0px 0px 12px rgba(0,0,0,0.5);
}

.search-form-cont {
    width: 80%;
    margin: 0 auto;
    box-shadow: 0px 0px 24px rgba(0,0,0,0.2);
}

.hero-lower {
    position: absolute;
    width: 100%;
    bottom: 16px;
    z-index: 500;
}
.subtext {
    letter-spacing: 0.4px;
    margin-bottom: 16px;
    text-shadow: 0px 0px 12px rgba(0,0,0,0.5);
}

/* Recent properties */
.swiper2 {
    padding: 16px 0px 64px 0px;
    /* background-color: aqua; */
}
.swiper2 .property {
    width: 75%;
}

@media screen and (max-width: 768px) {
    .hero-content {
        padding: 150px 0 0 0;
    }
    .tagline {
        font-size: 28px;
        margin: 0 0 20px 0;
    }

    .search-form-cont {
        width: 90%;
    }

    .hero-lower {
        bottom: 12px;
    }
    .subtext {
        font-size: 15px;
        margin-bottom: 12px;
    }

    /* Recent properties */
    .swiper2 {
        padding: 16px 0px 64px 0px;
        /* background-color: aqua; */
    }
    .swiper2 .property {
        width: 85%;
    }
}

@media screen and (max-width: 576px) {
    .tagline {
        font-size: 20px;
        font-weight: 500;
        letter-spacing: 0.8px;
        margin: 0 0 16px 0;
    }

    .search-form-cont {
        width: 95%;
    }

    .hero-lower {
        bottom: 8px;
    }
    .subtext {
        font-size: 14px;
        margin-bottom: 10px;
    }
    .swiper2 .property {
        width: 100%;
    }
}