.search-form .form-control, .search-form select, .search-form input {
    border: none !important;
    height: auto !important;
    padding: 16px 18px !important;
    color: var(--accent-color);
    font-weight: 600;
    border-radius: 0px !important;
    outline: none !important;
    background-color: var(--primary-color);
}
.form-control:focus {
    box-shadow: none;
}
select:disabled {
    display: none;
}
.input-group {
    border-radius: 4px;
    overflow: hidden;
}
.location-field {
    color: var(--accent-color);
    opacity: 1;
}
.location-field::placeholder {
    color: var(--accent-color);
    opacity: 0.6;
}
.location-field:focus {
    color: var(--accent-color);
    opacity: 1;
}
.input-group-append button {
    display: flex;
    justify-content: center;
    align-items: center;
    border: none;
}
.input-group-append ion-icon {
    font-size: 24px;
    font-weight: 500;
    color: var(--accent-color);
}

@media screen and (max-width: 768px) {
    .search-form .form-control, .search-form select, .search-form input {
        padding: 12px 10px !important;
        font-size: 15px;
    }
    .input-group-append ion-icon {
        font-size: 22px;
    }
}

@media screen and (max-width: 576px) {
    .input-group-prepend {
        width: 32%;
        margin-bottom: 8px;
    }
    select:disabled {
        display: initial;
    }
    .input-group-prepend:nth-child(2) {
        margin: 0 2% 8px 2%;
    }
    .search-form .form-control, .search-form select, .search-form input {
        font-size: 14px;
        padding: 10px !important;
    }
    .input-group-append ion-icon {
        font-size: 20px;
    }
}